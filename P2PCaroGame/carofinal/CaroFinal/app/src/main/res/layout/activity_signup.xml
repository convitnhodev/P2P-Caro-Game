<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    android:background="#F4F4F4"
    tools:context=".SignupActivity">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#F4F4F4"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></View>

        <ImageView

            android:id="@+id/back_btn"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="200dp"
            android:layout_weight="1"
            android:src="@drawable/back_icon"></ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"></View>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:src="@drawable/splash_src"></ImageView>
    <TextView
        android:layout_width="wrap_content"

        android:autoSizeMinTextSize="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.05"
        android:text="Sign up"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#505050"></TextView>

    <EditText
        android:paddingTop="50dp"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/signup_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_person"
        android:hint="Username"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        ></EditText>
    <EditText
        android:id="@+id/signup_password"
        android:fontFamily="@font/poppins_medium"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Password"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:inputType="textPassword"
        ></EditText>
    <EditText
        android:id="@+id/confirm"
        android:fontFamily="@font/poppins_medium"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Confirm"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:inputType="textPassword"
        ></EditText>

    <Button
        android:id="@+id/signupbtn2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_1"
        android:fontFamily="@font/poppins_medium"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />
</LinearLayout>