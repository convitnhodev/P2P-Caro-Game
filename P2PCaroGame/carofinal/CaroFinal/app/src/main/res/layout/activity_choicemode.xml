<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/background_img"
    tools:context=".ChoiceModeActivity">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="10dp"
            android:id="@+id/ai_player_names_back_btn"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/profile_img"></com.mikhaellopez.circularimageview.CircularImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:fontFamily="@font/poppins_medium"
                android:textColor="#353535"
                android:id="@+id/user_name_txt"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Ngô Phi Hùng"
                android:textStyle="bold"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/player_two_won_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="20dp"
                    android:textColor="#353535"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:fontFamily="@font/poppins_medium"
                    ></TextView>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:src="@drawable/coin"></com.mikhaellopez.circularimageview.CircularImageView>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"></View>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ai_player_name_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_weight="5.5">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"></View>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playerbtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_1"
            android:fontFamily="@font/poppins_medium"
            android:text="With player"
            android:layout_marginRight="95dp"
            android:layout_marginLeft="95dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aibtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_2"
            android:fontFamily="@font/poppins_medium"
            android:text="With AI"
            android:layout_marginRight="95dp"
            android:layout_marginLeft="95dp"
            android:textAllCaps="false"
            android:textColor="#FF3D00"
            android:textSize="18dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/matchbtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_1"
            android:fontFamily="@font/poppins_medium"
            android:text="Match History"
            android:layout_marginRight="95dp"
            android:layout_marginLeft="95dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shopbtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:background="@drawable/button_2"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Shopping"
            android:textAllCaps="false"
            android:textColor="#FF3D00"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></View>


    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="-500dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="40dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/seting_gifview_offline_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="7.5dp"
                android:src="@drawable/settings_gif" />


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/logoutbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:src="@drawable/logout"></ImageView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>