<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#F6F6F6"
    android:layout_height="match_parent"
    tools:context=".AiGameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"

        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></View>

        <ImageView
            android:id="@+id/offline_game_back_btn_p2p"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/back_icon"></ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"></View>
        <ImageView
            android:id="@+id/btn_play_wifi"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:src="@drawable/newgame"></ImageView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>
        <LinearLayout

            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="22.5dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="2.5"
            android:background="@drawable/count_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/turn_player_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:gravity="left"
                android:text="Turn:"
                android:textColor="#353535"
                android:textSize="20dp"></TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name_txt_wifi_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Ngô Phi Hùng"
                android:textColor="#353535"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/player_two_won_txt_wifi_player2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="left"
                    android:text="6"
                    android:textColor="#353535"
                    android:textSize="20dp"></TextView>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:src="@drawable/coin"></com.mikhaellopez.circularimageview.CircularImageView>
            </LinearLayout>
        </LinearLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/wifi_profile_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:padding="2dp"
            android:src="@drawable/profile_img"></com.mikhaellopez.circularimageview.CircularImageView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/boardGame_wifi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="6.5"
        android:orientation="vertical"
        android:padding="1dp"
        android:weightSum="5.5">


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"></View>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="10dp"
            android:id="@+id/ai_player_names_back_btn"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/profile_img"></com.mikhaellopez.circularimageview.CircularImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:fontFamily="@font/poppins_medium"
                android:textColor="#353535"
                android:id="@+id/user_name_txt_wifi_player1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Ngô Phi Hùng"
                android:textStyle="bold"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/player_two_won_txt_wifi_player1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="20dp"
                    android:textColor="#353535"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:fontFamily="@font/poppins_medium"
                    ></TextView>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:src="@drawable/coin"></com.mikhaellopez.circularimageview.CircularImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.65"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"


                android:foregroundGravity="center"
                android:elevation="4dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="40dp">
                <ImageView
                    android:id="@+id/btn_wifi_chat"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ic_baseline_chat_24"
                    android:layout_gravity="center"
                    android:padding="18dp"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_wifi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.65"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:foregroundGravity="center"
                android:elevation="4dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="40dp">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/ai_game_seting_gifview_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7.5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/settings_gif" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>





</LinearLayout>